<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context=".NewNameh">


            <include
                layout="@layout/app_bar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nnameh"
                android:id="@+id/textView12"
                android:textColor="#000" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nnameh"
                android:background="@drawable/custom_button"
                android:layout_toEndOf="@+id/textView12"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mnameh"
                android:id="@+id/textView11"
                android:textColor="#000" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:id="@+id/mnameh"
                android:layout_toEndOf="@+id/textView11"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manameh"
                android:id="@+id/textView13"
                android:textColor="#000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/manameh"
                android:background="@drawable/custom_button"
                android:focusable="true"
                android:maxLines="14"
                android:minLines="10"
                android:layout_toEndOf="@+id/textView13"
                android:gravity="top" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/payamrecive"
                    android:text="@string/recive"
                    android:textColor="#000"
                    android:layout_alignBottom="@+id/textView18"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="29dp"
                    android:id="@+id/textView18"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/payamrecive" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_user"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:scrollbars="vertical" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sabt"
                android:background="@drawable/button"
                android:text="@string/sabt" />
        </RelativeLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>